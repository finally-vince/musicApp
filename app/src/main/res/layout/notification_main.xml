<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:background="@color/white_text_color"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView1_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="10dp"
        android:src="@mipmap/music"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1_song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/songName"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/textView2_singer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/singer"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:textColor="@color/black"
            android:textSize="12sp"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton1_play_pause"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@null"
            android:src="@mipmap/bt_notificationbar_play"
        />

        <ImageButton
            android:id="@+id/imageButton2_next"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:src="@mipmap/bt_notificationbar_next"
        />
        <ImageButton
            android:id="@+id/imageButton3_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:src="@mipmap/bt_notificationbar_close"
        />

    </LinearLayout>

</LinearLayout>
