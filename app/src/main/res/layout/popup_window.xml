<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ListView
        android:id="@+id/listView1_popup_window"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="@color/card_bg_color"
        android:layout_alignParentBottom="true"
        >
    </ListView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="4dp"
        android:background="@mipmap/top_bar"
        android:layout_above="@+id/listView1_popup_window"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@mipmap/bt_list_button_roundplay_normal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="正在播放列表"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/textView4"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部清空"
            android:textColor="@color/dark_text_color"
            android:textSize="12dp"
            android:background="@null"
            android:id="@+id/button"/>
    </LinearLayout>

</RelativeLayout>
